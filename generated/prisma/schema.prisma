generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model profiles {
  id         String      @id @default(uuid())
  full_name  String
  email      String      @unique
  avatar_url String?
  created_at DateTime    @default(now())
  updated_at DateTime    @updatedAt
  donations  donations[]
}

model ngos {
  id          String      @id @default(uuid())
  name        String
  email       String
  category    String
  location    String
  latitude    Float
  longitude   Float
  description String
  website     String?
  phone       String?
  hours       String?
  image_url   String?
  created_at  DateTime    @default(now())
  updated_at  DateTime    @updatedAt
  donations   donations[]
}

model donations {
  id              String   @id @default(uuid())
  title           String
  category        String
  condition       String
  description     String
  quantity        Int
  delivery_method String
  preferred_date  String
  image_url       String?
  status          String   @default("pending")
  user_id         String
  ngo_id          String?
  created_at      DateTime @default(now())
  updated_at      DateTime @updatedAt

  profile profiles @relation(fields: [user_id], references: [id])
  ngo     ngos?    @relation(fields: [ngo_id], references: [id])
}
